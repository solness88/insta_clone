<div class = "fill_in">
  <h4>アカウントを編集</h4>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <ul>
    <%= form_with(model: @user, local: true) do |f| %>
    <li>
      <div><%= f.label :name %></div>
      <div><%= f.text_field :name %></div>
    </li>
    <li class = "fillin_box">
      <div><%= f.label :email %></div>
      <div><%= f.email_field :email %></div>
    </li>
    <li class = "fillin_box">
      <div><%= f.label :password %></div>
      <div><%= f.password_field :password %></div>
    </li>
    <li class = "fillin_box">
      <div><%= f.label :password_confirmation %></div>
      <div><%= f.password_field :password_confirmation %></div>
    </li>
    <li class = "fillin_box">
      <div><%= f.label :image %></div>
      <div><%= f.file_field :image %></div>
    </li>
    <li class = "fillin_box"><%= f.submit %></li>
    <% end %>
  </ul>
</div>
<div class = "sidebar">
  <ul>
    <li class = "side_userimg"><%= image_tag @current_user.image.url %></li>
    <li class = "side_userimg">こんにちは、<%= @current_user.name %>さん。</li>
    <li><%= link_to @current_user.name + "さんのお気に入りの投稿へ", favorites_path %></li>
    <br>
    <p class = "side_line">
    <li class = "side_userimg">投稿のあるユーザー</li>

  <% @post_users.each do |post_user| %>
    <% if post_user.user.name != @current_user.name %>
      <li class = "side_userimg"><%= image_tag post_user.user.image.url %></li>
      <li><%= post_user.user.name %></li>
    <% end %>
  </ul>
  <% end %>
</div>
